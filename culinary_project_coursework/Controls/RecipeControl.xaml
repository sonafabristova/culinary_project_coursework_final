<UserControl x:Class="culinary_project_coursework.Controls.RecipeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:culinary_project_coursework.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Название рецепта -->
            <TextBlock Grid.Row="0" 
                       Text="{Binding Название}" 
                       FontSize="16" 
                       FontWeight="Bold"
                       Foreground="DarkBlue"
                       TextWrapping="Wrap"/>

            <!-- Описание -->
            <TextBlock Grid.Row="1" 
                       Text="{Binding Описание}" 
                       FontSize="12"
                       Foreground="Gray"
                       TextWrapping="Wrap"
                       Margin="0,5,0,0"
                       MaxHeight="40"
                       TextTrimming="CharacterEllipsis"/>

            <!-- Детали -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        Margin="0,10,0,0">

                <!-- Время приготовления -->
                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="⏱️" FontSize="12" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding ВремяПриготовления}" FontSize="12"/>
                    <TextBlock Text=" мин" FontSize="12" Margin="2,0,0,0"/>
                </StackPanel>

                <!-- Калории -->
                <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="🔥" FontSize="12" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding Калории}" FontSize="12"/>
                    <TextBlock Text=" ккал" FontSize="12" Margin="2,0,0,0"/>
                </StackPanel>

                <!-- БЖУ -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🥩" FontSize="12" Margin="0,0,2,0"/>
                    <TextBlock Text="{Binding Белки, StringFormat={}{0:F1}}" FontSize="10"/>
                    <TextBlock Text="г" FontSize="10" Margin="0,0,5,0"/>

                    <TextBlock Text="🥑" FontSize="12" Margin="5,0,2,0"/>
                    <TextBlock Text="{Binding Жиры, StringFormat={}{0:F1}}" FontSize="10"/>
                    <TextBlock Text="г" FontSize="10" Margin="0,0,5,0"/>

                    <TextBlock Text="🍞" FontSize="12" Margin="5,0,2,0"/>
                    <TextBlock Text="{Binding Углеводы, StringFormat={}{0:F1}}" FontSize="10"/>
                    <TextBlock Text="г" FontSize="10"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>