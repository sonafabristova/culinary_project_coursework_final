<UserControl x:Class="culinary_project_coursework.Controls.RecipeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:culinary_project_coursework.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="500"
             Loaded="RecipeControl_Loaded">

    <Border BorderBrush="LightGray" 
            BorderThickness="1" 
            CornerRadius="5" 
            Padding="10" 
            Margin="5"
            Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Фото -->
                <ColumnDefinition Width="*"/>
                <!-- Основная информация -->
            </Grid.ColumnDefinitions>

            <!-- Фото рецепта (слева) -->
            <Border Grid.Column="0" 
                    Width="100" 
                    Height="100" 
                    Margin="0,0,15,0"
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1"
                    Background="#F5F5F5"
                    CornerRadius="3">

                <Grid>
                    <!-- Изображение -->
                    <Image x:Name="RecipeImage"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           MaxWidth="100"
                           MaxHeight="100"/>

                    <!-- Заглушка -->
                    <TextBlock x:Name="ImagePlaceholder"
                               Text="📷"
                               FontSize="24"
                               Foreground="#CCCCCC"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Основная информация (справа) -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Название рецепта (сверху) -->
                <TextBlock Grid.Row="0" 
                           Text="{Binding Название}" 
                           FontSize="18" 
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           TextWrapping="Wrap"
                           Margin="0,0,0,5"/>

                <!-- Описание (посередине) -->
                <TextBlock Grid.Row="1" 
                           Text="{Binding Описание}" 
                           FontSize="12"
                           Foreground="#7F8C8D"
                           TextWrapping="Wrap"
                           Margin="0,0,0,8"
                           MaxHeight="40"
                           TextTrimming="CharacterEllipsis"/>

                <!-- Детали (внизу) -->
                <StackPanel Grid.Row="2" 
                            Orientation="Horizontal" 
                            Margin="0,5,0,0">

                    <!-- Время приготовления -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                        <TextBlock Text="⏱️" FontSize="12" Margin="0,0,5,0" Foreground="#3498DB"/>
                        <TextBlock Text="{Binding ВремяПриготовления}" FontSize="12" Foreground="#2C3E50"/>
                        <TextBlock Text=" мин" FontSize="12" Margin="2,0,0,0" Foreground="#7F8C8D"/>
                    </StackPanel>

                    <!-- Калории -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                        <TextBlock Text="🔥" FontSize="12" Margin="0,0,5,0" Foreground="#E74C3C"/>
                        <TextBlock Text="{Binding Калории}" FontSize="12" Foreground="#2C3E50"/>
                        <TextBlock Text=" ккал" FontSize="12" Margin="2,0,0,0" Foreground="#7F8C8D"/>
                    </StackPanel>

                    <!-- БЖУ -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🥩" FontSize="12" Margin="0,0,2,0" Foreground="#27AE60"/>
                        <TextBlock Text="{Binding Белки, StringFormat={}{0:F1}}" FontSize="11" Foreground="#2C3E50"/>
                        <TextBlock Text="г" FontSize="11" Margin="0,0,8,0" Foreground="#7F8C8D"/>

                        <TextBlock Text="🥑" FontSize="12" Margin="0,0,2,0" Foreground="#F39C12"/>
                        <TextBlock Text="{Binding Жиры, StringFormat={}{0:F1}}" FontSize="11" Foreground="#2C3E50"/>
                        <TextBlock Text="г" FontSize="11" Margin="0,0,8,0" Foreground="#7F8C8D"/>

                        <TextBlock Text="🍞" FontSize="12" Margin="0,0,2,0" Foreground="#2980B9"/>
                        <TextBlock Text="{Binding Углеводы, StringFormat={}{0:F1}}" FontSize="11" Foreground="#2C3E50"/>
                        <TextBlock Text="г" FontSize="11" Foreground="#7F8C8D"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>