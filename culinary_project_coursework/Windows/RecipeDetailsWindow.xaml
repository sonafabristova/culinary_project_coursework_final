<Window x:Class="culinary_project_coursework.Windows.RecipeDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Title="Рецепт" 
        Background="#FFF8F0">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">

            <!-- Заголовок - Название рецепта -->
            <StackPanel HorizontalAlignment="Center" 
                        Margin="0,0,0,25">
                <TextBlock x:Name="TitleText" 
                          FontSize="28" 
                          FontWeight="SemiBold" 
                          TextAlignment="Center"
                          Foreground="#8B4513"
                          TextWrapping="Wrap"/>
                <Border Height="3" 
                        Width="300" 
                        Background="#DEB887" 
                        Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Фото готового блюда -->
            <Border 
                    BorderThickness="2" 
                    Height="220"
                    Margin="0,0,0,25"
                    HorizontalAlignment="Center"
                    Width="450">
                <Image x:Name="RecipeImage"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       MaxHeight="220"
                       MaxWidth="450"/>
            </Border>

            <!-- БЖУ и калории -->
            <Grid Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Белки -->
                <Border Grid.Column="0" 
                        Background="#E8F5E8" 
                        Padding="15" 
                        Margin="5">
                    <StackPanel>
                        <TextBlock Text="🥩 Белки:" 
                                  FontWeight="SemiBold" 
                                  FontSize="14"
                                  Foreground="#27AE60"/>
                        <TextBlock x:Name="ProteinsText" 
                                  FontSize="20" 
                                  FontWeight="Bold"
                                  Foreground="#2C3E50"/>
                        <TextBlock Text="г" 
                                  FontSize="12"
                                  Foreground="#7F8C8D"
                                  HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>

                <!-- Жиры -->
                <Border Grid.Column="1" 
                        Background="#FFF3E0" 
                        Padding="15" 
                        Margin="5">
                    <StackPanel>
                        <TextBlock Text="🥑 Жиры:" 
                                  FontWeight="SemiBold" 
                                  FontSize="14"
                                  Foreground="#F39C12"/>
                        <TextBlock x:Name="FatsText" 
                                  FontSize="20" 
                                  FontWeight="Bold"
                                  Foreground="#2C3E50"/>
                        <TextBlock Text="г" 
                                  FontSize="12"
                                  Foreground="#7F8C8D"
                                  HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>

                <!-- Углеводы -->
                <Border Grid.Column="2" 
                        Background="#E3F2FD" 
                        Padding="15" 
                        Margin="5">
                    <StackPanel>
                        <TextBlock Text="🍞 Углеводы:" 
                                  FontWeight="SemiBold" 
                                  FontSize="14"
                                  Foreground="#2980B9"/>
                        <TextBlock x:Name="CarbsText" 
                                  FontSize="20" 
                                  FontWeight="Bold"
                                  Foreground="#2C3E50"/>
                        <TextBlock Text="г" 
                                  FontSize="12"
                                  Foreground="#7F8C8D"
                                  HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>

                <!-- Калории -->
                <Border Grid.Column="3" 
                        Background="#FFEBEE" 
                        Padding="15" 
                        Margin="5">
                    <StackPanel>
                        <TextBlock Text="🔥 Калории:" 
                                  FontWeight="SemiBold" 
                                  FontSize="14"
                                  Foreground="#E74C3C"/>
                        <TextBlock x:Name="CaloriesText" 
                                  FontSize="20" 
                                  FontWeight="Bold"
                                  Foreground="#2C3E50"/>
                        <TextBlock Text="ккал" 
                                  FontSize="12"
                                  Foreground="#7F8C8D"
                                  HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Время приготовления -->
            <Border Background="White" 
                    BorderBrush="#DEB887"
                    BorderThickness="2"
                    Padding="20" 
                    Margin="0,0,0,25">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⏱️ Время приготовления:" 
                              FontWeight="SemiBold"
                              FontSize="16"
                              Foreground="#8B4513"/>
                    <TextBlock x:Name="TimeText" 
                              FontSize="16"
                              FontWeight="Bold"
                              Margin="10,0,0,0"
                              Foreground="#8B4513"/>
                 
                </StackPanel>
            </Border>

            <!-- Ингредиенты -->
            <Border BorderBrush="#DEB887" 
                    BorderThickness="2" 
                    Background="White"
                    Padding="20" 
                    Margin="0,0,0,25">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                Margin="0,0,0,15">
                        <TextBlock Text="🥕" 
                                  FontSize="20"
                                  Margin="0,0,10,0"/>
                        <TextBlock Text="Ингредиенты:" 
                                  FontSize="20" 
                                  FontWeight="SemiBold"
                                  Foreground="#8B4513"/>
                    </StackPanel>

                    <ItemsControl x:Name="IngredientsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,8,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Name}"
                                               FontSize="15"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Amount}"
                                               FontSize="15"
                                               FontWeight="SemiBold"
                                               Foreground="#FF7F50"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Шаги приготовления -->
            <Border BorderBrush="#DEB887" 
                    BorderThickness="2" 
                    Background="White"
                    Padding="20" 
                    Margin="0,0,0,30">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" 
                                Margin="0,0,0,15">
                        <TextBlock Text="👨‍🍳" 
                                  FontSize="20"
                                  Margin="0,0,10,0"/>
                        <TextBlock Text="Шаги приготовления:" 
                                  FontSize="20" 
                                  FontWeight="SemiBold"
                                  Foreground="#8B4513"/>
                    </StackPanel>

                    <ItemsControl x:Name="StepsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FFFDF8" 
                                        Margin="0,10,0,10" 
                                        Padding="15"
                                        BorderBrush="#DEB887"
                                        BorderThickness="1">
                                    <TextBlock Text="{Binding}" 
                                              TextWrapping="Wrap"
                                              FontSize="15"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Кнопка закрытия -->
            <Button Content="❌ Закрыть" 
                    HorizontalAlignment="Center" 
                    Padding="25,15" 
                    MinWidth="150"
                    Background="#8B7355"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Click="CloseButton_Click"
                    Margin="0,10,0,20"/>

        </StackPanel>
    </ScrollViewer>
</Window>