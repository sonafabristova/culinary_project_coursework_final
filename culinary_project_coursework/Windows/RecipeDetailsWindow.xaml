<Window x:Class="culinary_project_coursework.Windows.RecipeDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Title="Рецепт" 
        Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0">
        <StackPanel Margin="20">

            <!-- Заголовок - Название рецепта -->
            <TextBlock x:Name="TitleText" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      TextAlignment="Center"
                      Foreground="#2C3E50"
                      Margin="0,0,0,20"
                      TextWrapping="Wrap"/>

            
            <Border 
                    BorderThickness="1" 
                   
                    Height="200"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    Width="400">
                <!-- Просто Image без заглушки -->
                <Image x:Name="RecipeImage"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       MaxHeight="200"
                       MaxWidth="400"/>
            </Border>

            <!-- БЖУ и калории -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Белки -->
                <Border Grid.Column="0" 
                        Background="#E8F5E8" 
                        Padding="10" 
                        Margin="2">
                    <StackPanel>
                        <TextBlock Text="Белки:" 
                                  FontWeight="SemiBold" 
                                  FontSize="12"
                                  Foreground="#27AE60"/>
                        <TextBlock x:Name="ProteinsText" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                  Foreground="#2C3E50"/>
                    </StackPanel>
                </Border>

                <!-- Жиры -->
                <Border Grid.Column="1" 
                        Background="#FFF3E0" 
                        Padding="10" 
                        Margin="2">
                    <StackPanel>
                        <TextBlock Text="Жиры:" 
                                  FontWeight="SemiBold" 
                                  FontSize="12"
                                  Foreground="#F39C12"/>
                        <TextBlock x:Name="FatsText" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                  Foreground="#2C3E50"/>
                    </StackPanel>
                </Border>

                <!-- Углеводы -->
                <Border Grid.Column="2" 
                        Background="#E3F2FD" 
                        Padding="10" 
                        Margin="2">
                    <StackPanel>
                        <TextBlock Text="Углеводы:" 
                                  FontWeight="SemiBold" 
                                  FontSize="12"
                                  Foreground="#2980B9"/>
                        <TextBlock x:Name="CarbsText" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                  Foreground="#2C3E50"/>
                    </StackPanel>
                </Border>

                <!-- Калории -->
                <Border Grid.Column="3" 
                        Background="#FFEBEE" 
                        Padding="10" 
                        Margin="2">
                    <StackPanel>
                        <TextBlock Text="Калории:" 
                                  FontWeight="SemiBold" 
                                  FontSize="12"
                                  Foreground="#E74C3C"/>
                        <TextBlock x:Name="CaloriesText" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                  Foreground="#2C3E50"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Время приготовления -->
            <Border Background="#F8F9FA" 
                    Padding="15" 
                    Margin="0,0,0,20"
                    BorderBrush="#E9ECEF"
                    BorderThickness="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⏱️ Время приготовления:" 
                              FontWeight="SemiBold"
                              FontSize="14"
                              Foreground="#2C3E50"/>
                    <TextBlock x:Name="TimeText" 
                              FontSize="14"
                              Margin="10,0,0,0"
                              Foreground="#2C3E50"/>
                </StackPanel>
            </Border>

            <!-- Ингредиенты -->
            <Border BorderBrush="#E9ECEF" 
                    BorderThickness="0,1,0,0" 
                    Padding="0,15,0,20">
                <StackPanel>
                    <TextBlock Text="🍽Ингредиенты:" 
                              FontSize="16" 
                              FontWeight="Bold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,10"/>

                    <ItemsControl x:Name="IngredientsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2,0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Name}"
                                               FontSize="14"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Amount}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#7F8C8D"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Шаги приготовления -->
            <Border BorderBrush="#E9ECEF" 
                    BorderThickness="0,1,0,0" 
                    Padding="0,15,0,20">
                <StackPanel>
                    <TextBlock Text="📝 Шаги приготовления:" 
                              FontSize="16" 
                              FontWeight="Bold"
                              Foreground="#2C3E50"
                              Margin="0,0,0,10"/>

                    <ItemsControl x:Name="StepsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F8F9FA" 
                                        Margin="0,5,0,5" 
                                        Padding="10"
                                        BorderBrush="#E9ECEF"
                                        BorderThickness="1">
                                    <TextBlock Text="{Binding}" 
                                              TextWrapping="Wrap"
                                              FontSize="14"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Кнопка закрытия -->
            <Button Content="Закрыть" 
                    HorizontalAlignment="Center" 
                    Padding="20,10" 
                    MinWidth="120"
                    Background="#3498DB"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Click="CloseButton_Click"
                    Margin="0,10,0,0"/>

        </StackPanel>
    </ScrollViewer>
</Window>