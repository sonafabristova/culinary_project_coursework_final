<Window x:Class="culinary_project_coursework.Windows.CreateMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Title="Создание меню" 
        WindowStartupLocation="CenterOwner"
        Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" Name="MainStackPanel">

            <!-- Заголовок с информацией о выборе -->
            <TextBlock Name="TitleTextBlock" 
                      Text="Создание меню" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      TextAlignment="Center"
                      Foreground="#2C3E50"
                      Margin="0,0,0,20"/>

            <!-- Информация о выбранных параметрах -->
            <Border BorderBrush="#3498DB" 
                    BorderThickness="1" 
                    Background="#EBF5FB"
                    Padding="15"
                    Margin="0,0,0,20"
                    CornerRadius="5">
                <StackPanel>
                    <TextBlock Name="ParametersTextBlock"
                              Text="Параметры меню"
                              FontWeight="SemiBold"
                              Foreground="#2C3E50"
                              TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Контейнер для дней -->
            <ItemsControl Name="DaysItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#BDC3C7" 
                                BorderThickness="1" 
                                Background="#F8F9FA"
                                Padding="15"
                                Margin="0,0,0,15"
                                CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="{Binding DayTitle}" 
                                          FontSize="18" 
                                          FontWeight="Bold"
                                          Foreground="#2C3E50"
                                          Margin="0,0,0,15"
                                          Background="#E8F6F3"
                                          Padding="10"
                                          TextAlignment="Center"/>

                                <!-- Контейнер для людей -->
                                <ItemsControl ItemsSource="{Binding People}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#D5DBDB" 
                                                    BorderThickness="1" 
                                                    Background="White"
                                                    Padding="10"
                                                    Margin="0,0,0,10"
                                                    CornerRadius="3">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding PersonTitle}" 
                                                              FontSize="14" 
                                                              FontWeight="Bold"
                                                              Foreground="#2C3E50"
                                                              Margin="0,0,0,10"/>

                                                    <!-- Завтрак -->
                                                    <Grid Margin="0,0,0,5">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="100"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" 
                                                                  Text="Завтрак" 
                                                                  VerticalAlignment="Center"
                                                                  FontWeight="SemiBold"/>
                                                        <TextBlock Grid.Column="1" 
                                                             Text="{Binding Breakfast.DishName}"
                                                             Padding="10,5"
                                                             Margin="5,0,5,0"
                                                             FontSize="12"
                                                             VerticalAlignment="Center"
                                                             Background="#FCF3CF"/>
                                                        <Button Grid.Column="2" 
                                                                Content="Выбрать"
                                                                Background="#3498DB"
                                                                Foreground="White"
                                                                FontWeight="SemiBold"
                                                                Padding="10,5"
                                                                Click="SelectBreakfast_Click"
                                                                Tag="{Binding PersonId}"/>
                                                    </Grid>

                                                    <!-- Обед -->
                                                    <Grid Margin="0,0,0,5">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="100"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" 
                                                                  Text="Обед" 
                                                                  VerticalAlignment="Center"
                                                                  FontWeight="SemiBold"/>
                                                        <TextBlock Grid.Column="1" 
                                                                 Text="{Binding Lunch.DishName}"
                                                                 Padding="10,5"
                                                                 Margin="5,0,5,0"
                                                                 FontSize="12"
                                                                 VerticalAlignment="Center"
                                                                 Background="#D1F2EB"/> 
                                                        <Button Grid.Column="2" 
                                                                Content="Выбрать"
                                                                Background="#3498DB"
                                                                Foreground="White"
                                                                FontWeight="SemiBold"
                                                                Padding="10,5"
                                                                Click="SelectLunch_Click"
                                                                Tag="{Binding PersonId}"/>
                                                    </Grid>

                                                    <!-- Ужин -->
                                                    <Grid Margin="0,0,0,0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="100"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" 
                                                                  Text="Ужин" 
                                                                  VerticalAlignment="Center"
                                                                  FontWeight="SemiBold"/>
                                                        <TextBlock Grid.Column="1" 
                                                                 Text="{Binding Dinner.DishName}"
                                                                 Padding="10,5"
                                                                 Margin="5,0,5,0"
                                                                 FontSize="12"
                                                                 VerticalAlignment="Center"
                                                                 Background="#E8DAEF"/> 
                                                        <Button Grid.Column="2" 
                                                                Content="Выбрать"
                                                                Background="#3498DB"
                                                                Foreground="White"
                                                                FontWeight="SemiBold"
                                                                Padding="10,5"
                                                                Click="SelectDinner_Click"
                                                                Tag="{Binding PersonId}"/>
                                                    </Grid>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Кнопки управления -->
            <Grid Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Content="Сохранить меню" 
                        Background="#27AE60"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Padding="15,10"
                        Margin="0,0,10,0"
                        Click="SaveButton_Click"
                        Name="SaveButton"/>

                <Button Grid.Column="1" 
                        Content="Показать меню" 
                        Background="#2980B9"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Padding="15,10"
                        Margin="5,0,5,0"
                        Click="ShowMenuButton_Click"
                        Name="ShowMenuButton"/>

                <Button Grid.Column="2" 
                        Content="Назад" 
                        Background="#95A5A6"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Padding="15,10"
                        Margin="10,0,0,0"
                        Click="BackButton_Click"/>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</Window>