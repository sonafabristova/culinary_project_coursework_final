<Window x:Class="culinary_project_coursework.Windows.CreateMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Title="Создание меню" 
        WindowStartupLocation="CenterOwner"
        Background="#FFF8F0">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="25" Name="MainStackPanel">

            <!-- Заголовок -->
            <StackPanel HorizontalAlignment="Center" 
                        Margin="0,0,0,25">
                <TextBlock Name="TitleTextBlock" 
                          Text="📋 Создание меню" 
                          FontSize="28" 
                          FontWeight="SemiBold" 
                          Foreground="#8B4513"/>
                <Border Height="3" 
                        Width="220" 
                        Background="#DEB887" 
                        Margin="0,8,0,0"/>
            </StackPanel>

            <!-- Информация о параметрах -->
            <Border BorderBrush="#DEB887" 
                    BorderThickness="2" 
                    Background="White"
                    Padding="20"
                    Margin="0,0,0,25">
                <StackPanel>
                    <TextBlock Name="ParametersTextBlock"
                              Text="Параметры меню"
                              FontSize="18"
                              FontWeight="SemiBold"
                              Foreground="#8B4513"
                              TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Контейнер для дней -->
            <ItemsControl Name="DaysItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DEB887" 
                                BorderThickness="2" 
                                Background="White"
                                Padding="15"
                                Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="{Binding DayTitle}" 
                                          FontSize="20" 
                                          FontWeight="SemiBold"
                                          Foreground="#8B4513"
                                          Margin="0,0,0,20"
                                          Background="#FFF5E6"
                                          Padding="15"
                                          TextAlignment="Center"/>

                                <!-- Контейнер для людей -->
                                <ItemsControl ItemsSource="{Binding People}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#DEB887" 
                                                    BorderThickness="1" 
                                                    Background="#FFFDF8"
                                                    Padding="15"
                                                    Margin="0,0,0,15">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding PersonTitle}" 
                                                              FontSize="16" 
                                                              FontWeight="SemiBold"
                                                              Foreground="#8B4513"
                                                              Margin="0,0,0,15"/>

                                                    <!-- Завтрак -->
                                                    <Grid Margin="0,0,0,10">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="100"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" 
                                                                  Text="🥞 Завтрак" 
                                                                  VerticalAlignment="Center"
                                                                  FontWeight="SemiBold"/>
                                                        <TextBlock Grid.Column="1" 
                                                             Text="{Binding Breakfast.DishName}"
                                                             Padding="12,8"
                                                             Margin="10,0,10,0"
                                                             FontSize="14"
                                                             VerticalAlignment="Center"
                                                             Background="#FFF0E0"/>
                                                        <Button Grid.Column="2" 
                                                                Content="Выбрать"
                                                                Background="#FFA07A"
                                                                Foreground="White"
                                                                FontWeight="SemiBold"
                                                                Padding="12,8"
                                                                Click="SelectBreakfast_Click"
                                                                Tag="{Binding PersonId}"/>
                                                    </Grid>

                                                    <!-- Обед -->
                                                    <Grid Margin="0,0,0,10">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="100"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" 
                                                                  Text="🍲 Обед" 
                                                                  VerticalAlignment="Center"
                                                                  FontWeight="SemiBold"/>
                                                        <TextBlock Grid.Column="1" 
                                                                 Text="{Binding Lunch.DishName}"
                                                                 Padding="12,8"
                                                                 Margin="10,0,10,0"
                                                                 FontSize="14"
                                                                 VerticalAlignment="Center"
                                                                 Background="#F0F8E0"/>
                                                        <Button Grid.Column="2" 
                                                                Content="Выбрать"
                                                                Background="#FF7F50"
                                                                Foreground="White"
                                                                FontWeight="SemiBold"
                                                                Padding="12,8"
                                                                Click="SelectLunch_Click"
                                                                Tag="{Binding PersonId}"/>
                                                    </Grid>

                                                    <!-- Ужин -->
                                                    <Grid Margin="0,0,0,0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="100"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" 
                                                                  Text="🍽️ Ужин" 
                                                                  VerticalAlignment="Center"
                                                                  FontWeight="SemiBold"/>
                                                        <TextBlock Grid.Column="1" 
                                                                 Text="{Binding Dinner.DishName}"
                                                                 Padding="12,8"
                                                                 Margin="10,0,10,0"
                                                                 FontSize="14"
                                                                 VerticalAlignment="Center"
                                                                 Background="#F8E0F0"/>
                                                        <Button Grid.Column="2" 
                                                                Content="Выбрать"
                                                                Background="#CD5C5C"
                                                                Foreground="White"
                                                                FontWeight="SemiBold"
                                                                Padding="12,8"
                                                                Click="SelectDinner_Click"
                                                                Tag="{Binding PersonId}"/>
                                                    </Grid>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Кнопки управления -->
            <Grid Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <Button Grid.Column="1" 
                        Content="👁️ Показать меню" 
                        Background="#2980B9"
                        Foreground="White"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Padding="20,12"
                        Margin="5,0,5,0"
                        Click="ShowMenuButton_Click"
                        Name="ShowMenuButton"/>

                <Button Grid.Column="2" 
                        Content="🔙 Назад" 
                        Background="#8B7355"
                        Foreground="White"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Padding="20,12"
                        Margin="10,0,0,0"
                        Click="BackButton_Click"/>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</Window>