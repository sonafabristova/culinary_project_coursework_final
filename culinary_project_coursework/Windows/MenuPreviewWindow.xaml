<Window x:Class="culinary_project_coursework.Windows.MenuPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Title="Просмотр меню" 
        WindowStartupLocation="CenterOwner"
        Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" Name="MainStackPanel">

            <!-- Заголовок -->
            <Border BorderBrush="#2C3E50" 
                    BorderThickness="2" 
                    Background="#34495E"
                    Padding="20"
                    Margin="0,0,0,20"
                    CornerRadius="5">
                <TextBlock Text="Моё меню" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="White"
                          TextAlignment="Center"/>
            </Border>

            <!-- Контейнер для дней -->
            <ItemsControl Name="DaysItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#BDC3C7" 
                                BorderThickness="1" 
                                Background="#F8F9FA"
                                Padding="0"
                                Margin="0,0,0,25"
                                CornerRadius="5">
                            <StackPanel>

                                <!-- Заголовок дня -->
                                <Border Background="#3498DB" 
                                        Padding="15"
                                        CornerRadius="5,5,0,0">
                                    <TextBlock Text="{Binding DayTitle}" 
                                              FontSize="20" 
                                              FontWeight="Bold"
                                              Foreground="White"
                                              TextAlignment="Center"/>
                                </Border>

                                <!-- Контейнер для людей -->
                                <ItemsControl ItemsSource="{Binding People}" 
                                             Margin="15">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#D5DBDB" 
                                                    BorderThickness="1" 
                                                    Background="White"
                                                    Padding="0"
                                                    Margin="0,0,0,15"
                                                    CornerRadius="3">
                                                <StackPanel>

                                                    <!-- Заголовок человека -->
                                                    <Border Background="#EBF5FB" 
                                                            Padding="10">
                                                        <TextBlock Text="{Binding PersonTitle}" 
                                                                  FontSize="16" 
                                                                  FontWeight="Bold"
                                                                  Foreground="#2C3E50"/>
                                                    </Border>

                                                    <!-- Таблица приёмов пищи -->
                                                    <Grid Margin="0">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="120"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- Завтрак -->
                                                        <Border Grid.Row="0" Grid.Column="0" 
                                                                Background="#FCF3CF" 
                                                                BorderBrush="#F7DC6F" 
                                                                BorderThickness="0,0,1,0">
                                                            <TextBlock Text="Завтрак" 
                                                                      FontWeight="SemiBold"
                                                                      Padding="10,8"
                                                                      VerticalAlignment="Center"/>
                                                        </Border>
                                                        <Border Grid.Row="0" Grid.Column="1" 
                                                                Background="#FEF9E7" 
                                                                BorderBrush="#F7DC6F" 
                                                                BorderThickness="0">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Text="{Binding Breakfast}" 
                                                                      Padding="10,8"
                                                                      VerticalAlignment="Center"
                                                                      TextWrapping="Wrap"/>
                                                                <Button Grid.Column="1"
                                                                        Content="👁️"
                                                                        Padding="8,5"
                                                                        Margin="5"
                                                                        Tag="{Binding BreakfastRecipe}"
                                                                        Click="ViewRecipeDetails_Click"
                                                                        ToolTip="Просмотреть детали рецепта"
                                                                        Background="Transparent"
                                                                        BorderThickness="0"
                                                                        Foreground="#3498DB"
                                                                        FontSize="14"/>
                                                            </Grid>
                                                        </Border>

                                                        <!-- Обед -->
                                                        <Border Grid.Row="1" Grid.Column="0" 
                                                                Background="#D1F2EB" 
                                                                BorderBrush="#76D7C4" 
                                                                BorderThickness="0,1,1,0">
                                                            <TextBlock Text="Обед" 
                                                                      FontWeight="SemiBold"
                                                                      Padding="10,8"
                                                                      VerticalAlignment="Center"/>
                                                        </Border>
                                                        <Border Grid.Row="1" Grid.Column="1" 
                                                                Background="#E8F8F5" 
                                                                BorderBrush="#76D7C4" 
                                                                BorderThickness="0,1,0,0">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Text="{Binding Lunch}" 
                                                                      Padding="10,8"
                                                                      VerticalAlignment="Center"
                                                                      TextWrapping="Wrap"/>
                                                                <Button Grid.Column="1"
                                                                        Content="👁️"
                                                                        Padding="8,5"
                                                                        Margin="5"
                                                                        Tag="{Binding LunchRecipe}"
                                                                        Click="ViewRecipeDetails_Click"
                                                                        ToolTip="Просмотреть детали рецепта"
                                                                        Background="Transparent"
                                                                        BorderThickness="0"
                                                                        Foreground="#3498DB"
                                                                        FontSize="14"/>
                                                            </Grid>
                                                        </Border>

                                                        <!-- Ужин -->
                                                        <Border Grid.Row="2" Grid.Column="0" 
                                                                Background="#E8DAEF" 
                                                                BorderBrush="#BB8FCE" 
                                                                BorderThickness="0,1,1,0">
                                                            <TextBlock Text="Ужин" 
                                                                      FontWeight="SemiBold"
                                                                      Padding="10,8"
                                                                      VerticalAlignment="Center"/>
                                                        </Border>
                                                        <Border Grid.Row="2" Grid.Column="1" 
                                                                Background="#F4ECF7" 
                                                                BorderBrush="#BB8FCE" 
                                                                BorderThickness="0,1,0,0">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Text="{Binding Dinner}" 
                                                                      Padding="10,8"
                                                                      VerticalAlignment="Center"
                                                                      TextWrapping="Wrap"/>
                                                                <Button Grid.Column="1"
                                                                        Content="👁️"
                                                                        Padding="8,5"
                                                                        Margin="5"
                                                                        Tag="{Binding DinnerRecipe}"
                                                                        Click="ViewRecipeDetails_Click"
                                                                        ToolTip="Просмотреть детали рецепта"
                                                                        Background="Transparent"
                                                                        BorderThickness="0"
                                                                        Foreground="#3498DB"
                                                                        FontSize="14"/>
                                                            </Grid>
                                                        </Border>
                                                    </Grid>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Кнопки управления -->
            <Grid Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Content="Составить список покупок" 
                        Background="#27AE60"
                        Foreground="White"
                        FontWeight="SemiBold"
                        FontSize="14"
                        Padding="20,12"
                        Margin="0,0,10,0"
                        Click="CreateShoppingListButton_Click"
                        Name="CreateShoppingListButton"/>

                <Button Grid.Column="1" 
                        Content="Назад" 
                        Background="#95A5A6"
                        Foreground="White"
                        FontWeight="SemiBold"
                        FontSize="14"
                        Padding="20,12"
                        Margin="10,0,0,0"
                        Click="BackButton_Click"/>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</Window>