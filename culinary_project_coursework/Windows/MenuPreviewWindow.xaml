<Window x:Class="culinary_project_coursework.Windows.MenuPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Title="Просмотр меню" 
        WindowStartupLocation="CenterOwner"
        Background="#FFF8F0">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="25" Name="MainStackPanel">

            <!-- Заголовок -->
            <StackPanel HorizontalAlignment="Center" 
                        Margin="0,0,0,25">
                <TextBlock Text="📋 Моё меню" 
                          FontSize="28" 
                          FontWeight="SemiBold" 
                          Foreground="#8B4513"
                          TextAlignment="Center"/>
                <Border Height="3" 
                        Width="200" 
                        Background="#DEB887" 
                        Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Контейнер для дней -->
            <ItemsControl Name="DaysItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DEB887" 
                                BorderThickness="2" 
                                Background="White"
                                Padding="0"
                                Margin="0,0,0,30">
                            <StackPanel>

                                <!-- Заголовок дня -->
                                <Border Background="#FF7F50" 
                                        Padding="20">
                                    <TextBlock Text="{Binding DayTitle}" 
                                              FontSize="22" 
                                              FontWeight="SemiBold"
                                              Foreground="White"
                                              TextAlignment="Center"/>
                                </Border>

                                <!-- Контейнер для людей -->
                                <ItemsControl ItemsSource="{Binding People}" 
                                             Margin="20">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#DEB887" 
                                                    BorderThickness="1" 
                                                    Background="#FFFDF8"
                                                    Padding="0"
                                                    Margin="0,0,0,20">
                                                <StackPanel>

                                                    <!-- Заголовок человека -->
                                                    <Border Background="#FFA07A" 
                                                            Padding="15">
                                                        <TextBlock Text="{Binding PersonTitle}" 
                                                                  FontSize="18" 
                                                                  FontWeight="SemiBold"
                                                                  Foreground="White"/>
                                                    </Border>

                                                    <!-- Таблица приёмов пищи -->
                                                    <Grid Margin="0">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="140"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <!-- Завтрак -->
                                                        <Border Grid.Row="0" Grid.Column="0" 
                                                                Background="#FFF0E0" 
                                                                BorderBrush="#DEB887" 
                                                                BorderThickness="0,0,1,0">
                                                            <TextBlock Text="🥞 Завтрак" 
                                                                      FontWeight="SemiBold"
                                                                      Padding="15,12"
                                                                      VerticalAlignment="Center"
                                                                      Foreground="#8B4513"/>
                                                        </Border>
                                                        <Border Grid.Row="0" Grid.Column="1" 
                                                                Background="#FFFDF8" 
                                                                BorderBrush="#DEB887" 
                                                                BorderThickness="0">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Text="{Binding Breakfast}" 
                                                                          Padding="15,12"
                                                                          VerticalAlignment="Center"
                                                                          TextWrapping="Wrap"
                                                                          FontSize="15"/>
                                                                <Button Grid.Column="1"
                                                                        Content="👁️"
                                                                        Padding="10,8"
                                                                        Margin="10"
                                                                        Tag="{Binding BreakfastRecipe}"
                                                                        Click="ViewRecipeDetails_Click"
                                                                        ToolTip="Просмотреть детали рецепта"
                                                                        Background="#FFA07A"
                                                                        BorderThickness="0"
                                                                        Foreground="White"
                                                                        FontSize="14"
                                                                        FontWeight="Bold"/>
                                                            </Grid>
                                                        </Border>

                                                        <!-- Обед -->
                                                        <Border Grid.Row="1" Grid.Column="0" 
                                                                Background="#F0F8E0" 
                                                                BorderBrush="#DEB887" 
                                                                BorderThickness="0,1,1,0">
                                                            <TextBlock Text="🍲 Обед" 
                                                                      FontWeight="SemiBold"
                                                                      Padding="15,12"
                                                                      VerticalAlignment="Center"
                                                                      Foreground="#8B4513"/>
                                                        </Border>
                                                        <Border Grid.Row="1" Grid.Column="1" 
                                                                Background="#FFFDF8" 
                                                                BorderBrush="#DEB887" 
                                                                BorderThickness="0,1,0,0">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Text="{Binding Lunch}" 
                                                                          Padding="15,12"
                                                                          VerticalAlignment="Center"
                                                                          TextWrapping="Wrap"
                                                                          FontSize="15"/>
                                                                <Button Grid.Column="1"
                                                                        Content="👁️"
                                                                        Padding="10,8"
                                                                        Margin="10"
                                                                        Tag="{Binding LunchRecipe}"
                                                                        Click="ViewRecipeDetails_Click"
                                                                        ToolTip="Просмотреть детали рецепта"
                                                                        Background="#FF7F50"
                                                                        BorderThickness="0"
                                                                        Foreground="White"
                                                                        FontSize="14"
                                                                        FontWeight="Bold"/>
                                                            </Grid>
                                                        </Border>

                                                        <!-- Ужин -->
                                                        <Border Grid.Row="2" Grid.Column="0" 
                                                                Background="#F8E0F0" 
                                                                BorderBrush="#DEB887" 
                                                                BorderThickness="0,1,1,0">
                                                            <TextBlock Text="🍽️ Ужин" 
                                                                      FontWeight="SemiBold"
                                                                      Padding="15,12"
                                                                      VerticalAlignment="Center"
                                                                      Foreground="#8B4513"/>
                                                        </Border>
                                                        <Border Grid.Row="2" Grid.Column="1" 
                                                                Background="#FFFDF8" 
                                                                BorderBrush="#DEB887" 
                                                                BorderThickness="0,1,0,0">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Text="{Binding Dinner}" 
                                                                          Padding="15,12"
                                                                          VerticalAlignment="Center"
                                                                          TextWrapping="Wrap"
                                                                          FontSize="15"/>
                                                                <Button Grid.Column="1"
                                                                        Content="👁️"
                                                                        Padding="10,8"
                                                                        Margin="10"
                                                                        Tag="{Binding DinnerRecipe}"
                                                                        Click="ViewRecipeDetails_Click"
                                                                        ToolTip="Просмотреть детали рецепта"
                                                                        Background="#CD5C5C"
                                                                        BorderThickness="0"
                                                                        Foreground="White"
                                                                        FontSize="14"
                                                                        FontWeight="Bold"/>
                                                            </Grid>
                                                        </Border>
                                                    </Grid>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Кнопки управления -->
            <Grid Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Content="🛒 Составить список покупок" 
                        Background="#27AE60"
                        Foreground="White"
                        FontWeight="SemiBold"
                        FontSize="16"
                        Padding="25,15"
                        Margin="0,0,15,0"
                        Click="CreateShoppingListButton_Click"
                        Name="CreateShoppingListButton"/>

                <Button Grid.Column="1" 
                        Content="🔙 Назад" 
                        Background="#8B7355"
                        Foreground="White"
                        FontWeight="SemiBold"
                        FontSize="16"
                        Padding="25,15"
                        Margin="15,0,0,0"
                        Click="BackButton_Click"/>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</Window>