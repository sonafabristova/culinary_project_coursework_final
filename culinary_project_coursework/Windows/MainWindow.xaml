<Window x:Class="culinary_project_coursework.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:culinary_project_coursework"
        xmlns:controls="clr-namespace:culinary_project_coursework.Controls"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Title="Кулинарная книга" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <!-- Основной контент -->
        <Grid Grid.Column="0" Margin="20,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Заголовок -->
                <RowDefinition Height="*"/>
                <!-- Список рецептов (растягивается) -->
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Популярные рецепты" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Margin="0,0,0,20"
                      Grid.Row="0"/>

            <!-- ListBox занимает всё оставшееся пространство -->
            <ListBox Name="BoxRecipes" 
                     ItemsSource="{Binding SystemRecipes}" 
                     FontSize="14" 
                     Background="White"
                     Grid.Row="1"
                     SelectionChanged="Recipes_Change"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <controls:RecipeControl/>
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0,2,0,2"/>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Grid>

        <!-- Боковая панель -->
        <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Верхняя часть с кнопками -->
                <StackPanel Grid.Row="0" Margin="15">
                    <Border Height="1" Background="LightGray" Margin="0,0,0,20"/>
                    <Button Content="Мои рецепты" 
                            FontSize="14"
                            Background="LightSalmon"
                            Padding="10,5"
                            Margin="5"
                            Click="ButtonMyRecipesClick"/>
                    <Button Content="Меню" 
                            FontSize="14"
                            Background="LightSalmon"
                            Padding="10,5"
                            Margin="5"
                            Click="ButtonMenuClick"/>
                </StackPanel>

                <!-- Пустое пространство -->
                <Border Grid.Row="1"/>

                <!-- Кнопки в самом низу -->
                <StackPanel Grid.Row="2" Margin="15">
                    <Button Content="Выйти" 
                            FontSize="14"
                            Background="LightSalmon"
                            Padding="10,5"
                            Margin="5"
                            Click="ButtonExitClick"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>