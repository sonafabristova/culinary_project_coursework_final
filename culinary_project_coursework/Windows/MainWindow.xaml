<Window x:Class="culinary_project_coursework.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:culinary_project_coursework"
        mc:Ignorable="d"
        Title="Кулинарная книга" Height="650" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <!-- Основной контент -->
        <StackPanel Grid.Column="0" Margin="20">
            <TextBlock Text="Популярные рецепты" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Margin="0,0,0,20"/>

            <!-- ListBox с включенной вертикальной прокруткой -->
            <ListBox Name="BoxRecipes" 
                     ItemsSource="{Binding SystemRecipes}" 
                     FontSize="14" 
                     Background="White"
                     Margin="0,0,0,10"
                     SelectionChanged="Recipes_Change"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     MaxHeight="500">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="LightGray" 
                                BorderThickness="1" 
                                Margin="5" 
                                Padding="15" 
                                Background="White"
                                Width="Auto"
                                HorizontalAlignment="Stretch">
                            <StackPanel Width="Auto" HorizontalAlignment="Stretch">
                                <!-- Название рецепта -->
                                <TextBlock>
                                   
                                    <Run Text="{Binding Name}"
                                        FontWeight="Bold" />
                                </TextBlock>

                                <!-- Описание -->
                                <TextBlock Text="{Binding Description}" 
                                          FontStyle="Italic" 
                                          TextWrapping="Wrap"
                                          Margin="0,5,0,0"/>

                                <!-- БЖУ и калории -->
                                <StackPanel Orientation="Horizontal" 
                                           Margin="0,10,0,0"
                                           HorizontalAlignment="Left">
                                    <TextBlock>
                                        <Run Text="Б: "/>
                                        <Run Text="{Binding Proteins}"/>
                                        <Run Text="г"/>
                                    </TextBlock>
                                    <TextBlock Margin="15,0,0,0">
                                        <Run Text="Ж: "/>
                                        <Run Text="{Binding Fats}"/>
                                        <Run Text="г"/>
                                    </TextBlock>
                                    <TextBlock Margin="15,0,0,0">
                                        <Run Text="У: "/>
                                        <Run Text="{Binding Carbohydrates}"/>
                                        <Run Text="г"/>
                                    </TextBlock>
                                    <TextBlock Margin="15,0,0,0" Foreground="DarkRed">
                                        <Run Text="Калории: "/>
                                        <Run Text="{Binding Calories}"/>
                                        <Run Text=" ккал"/>
                                    </TextBlock>
                                </StackPanel>

                                <!-- Время приготовления -->
                                <TextBlock Margin="0,10,0,0" Foreground="DarkBlue">
                                    <Run Text="Время: "/>
                                    <Run Text="{Binding CookingTime}"/>
                                    <Run Text=" минут"/>
                                </TextBlock>

                                <!-- Ингредиенты (первые 3) -->
                                <TextBlock Margin="0,10,0,0" TextWrapping="Wrap">
                                    <Run Text="Ингредиенты: " FontWeight="SemiBold"/>
                                    <Run Text="{Binding IngredientsSummary}"/>
                                </TextBlock>

                                <!-- Индикатор системного рецепта -->
                                <TextBlock Text="🏆 Популярный рецепт" 
                                          FontWeight="SemiBold" 
                                          Foreground="Gold" 
                                          HorizontalAlignment="Right" 
                                          Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <!-- Стиль для элементов ListBox, чтобы они занимали всю ширину -->
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0,2,0,2"/>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </StackPanel>

        <!-- Боковая панель -->
        <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Верхняя часть с кнопками -->
                <StackPanel Grid.Row="0" Margin="15">
                    <Border Height="1" Background="LightGray" Margin="0,0,0,20"/>
                    <Button Content="Мои рецепты" 
                            FontSize="14"
                            Background="LightSalmon"
                            Padding="10,5"
                            Margin="5"
                            Click="ButtonMyRecipesClick"/>
                    <Button Content="Меню" 
                            FontSize="14"
                            Background="LightSalmon"
                            Padding="10,5"
                            Margin="5"
                            Click="ButtonMenuClick"/>
                </StackPanel>

                <!-- Пустое пространство -->
                <Border Grid.Row="1"/>

                <!-- Кнопки в самом низу -->
                <StackPanel Grid.Row="2" Margin="15">
                    <Button Content="Выйти" 
                            FontSize="14"
                            Background="LightSalmon"
                            Padding="10,5"
                            Margin="5"
                            Click="ButtonExitClick"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>