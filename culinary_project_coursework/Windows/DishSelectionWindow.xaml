<Window x:Class="culinary_project_coursework.Windows.DishSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор рецепта" 
        WindowStartupLocation="CenterOwner"
        Height="450" 
        Width="650"
        Background="#FFF8F0">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" 
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center">
            <TextBlock Text=" Выбор рецепта" 
                       FontSize="24" 
                       FontWeight="SemiBold" 
                       Foreground="#8B4513"/>
            <Border Height="3" 
                    Width="180" 
                    Background="#DEB887" 
                    Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Выбор типа рецептов -->
        <TextBlock Grid.Row="1" 
                   Text="Тип рецептов:" 
                   FontSize="16" 
                   FontWeight="SemiBold"
                   Foreground="#8B4513"
                   Margin="0,0,0,8"/>

        <Border Grid.Row="2" 
                Background="White"
                BorderBrush="#DEB887"
                BorderThickness="2"
                Padding="2"
                Margin="0,0,0,20">
            <ComboBox Name="RecipeTypeComboBox"
                      FontSize="15"
                      Padding="12,8"
                      Height="40"
                      VerticalContentAlignment="Center"
                      Background="White"
                      BorderThickness="0"
                      SelectionChanged="RecipeTypeComboBox_SelectionChanged">
                <ComboBoxItem Content="Все рецепты" IsSelected="True" Tag="all"/>
                <ComboBoxItem Content="Системные рецепты" Tag="system"/>
                <ComboBoxItem Content="Пользовательские рецепты" Tag="user"/>
            </ComboBox>
        </Border>

        <!-- Выбор рецепта -->
        <TextBlock Grid.Row="3" 
                   Text="Выберите рецепт:" 
                   FontSize="16" 
                   FontWeight="SemiBold"
                   Foreground="#8B4513"
                   Margin="0,0,0,8"/>

        <Border Grid.Row="4" 
                Background="White"
                BorderBrush="#DEB887"
                BorderThickness="2"
                Padding="2"
                Margin="0,0,0,20">
            <ComboBox Name="RecipesComboBox"
                      FontSize="15"
                      Padding="12,8"
                      Height="40"
                      VerticalContentAlignment="Center"
                      Background="White"
                      BorderThickness="0"
                      DisplayMemberPath="Название"
                      SelectedValuePath="IdРецепта">
                <ComboBoxItem Content="Выберите рецепт" IsSelected="True"/>
            </ComboBox>
        </Border>

        <!-- Кнопки -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" 
                    Content="✅ Выбрать" 
                    Background="#FF7F50"
                    Foreground="White"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Padding="20,12"
                    Margin="0,0,15,0"
                    Click="SelectButton_Click"
                    Width="130"/>

            <Button Grid.Column="2" 
                    Content="❌ Отмена" 
                    Background="#8B7355"
                    Foreground="White"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Padding="20,12"
                    Click="CancelButton_Click"
                    Width="130"/>
        </Grid>
    </Grid>
</Window>