<Window x:Class="culinary_project_coursework.Windows.DishSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор рецепта" 
        WindowStartupLocation="CenterOwner"
        Height="400" 
        Width="600"
        Background="White">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Выберите рецепт" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <!-- Выбор типа рецептов -->
        <TextBlock Grid.Row="1" 
                   Text="Тип рецептов:" 
                   FontSize="14" 
                   Margin="0,0,0,5"/>

        <ComboBox Grid.Row="2" 
                  Name="RecipeTypeComboBox"
                  FontSize="14"
                  Padding="10,5"
                  Margin="0,0,0,15"
                  Height="35"
                  SelectionChanged="RecipeTypeComboBox_SelectionChanged">
            <ComboBoxItem Content="Все рецепты" IsSelected="True" Tag="all"/>
            <ComboBoxItem Content="Системные рецепты" Tag="system"/>
            <ComboBoxItem Content="Пользовательские рецепты" Tag="user"/>
        </ComboBox>

        <!-- Выбор рецепта -->
        <TextBlock Grid.Row="3" 
                   Text="Выберите рецепт:" 
                   FontSize="14" 
                   Margin="0,0,0,5"/>

        <ComboBox Grid.Row="4" 
                  Name="RecipesComboBox"
                  FontSize="14"
                  Padding="10,5"
                  Margin="0,0,0,15"
                  Height="35"
                  DisplayMemberPath="Название"
                  SelectedValuePath="IdРецепта">
            <ComboBoxItem Content="Выберите рецепт" IsSelected="True"/>
        </ComboBox>

        <!-- Кнопки -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" 
                    Content="Выбрать" 
                    Background="#27AE60"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Padding="15,8"
                    Margin="0,0,10,0"
                    Click="SelectButton_Click"/>

            <Button Grid.Column="2" 
                    Content="Отмена" 
                    Background="#95A5A6"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Padding="15,8"
                    Click="CancelButton_Click"/>
        </Grid>
    </Grid>
</Window>