<Window x:Class="culinary_project_coursework.Windows.DishSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор блюда" 
        WindowStartupLocation="CenterOwner"
        Height="400" 
        Width="600"
        Background="White">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Выберите блюдо" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>

        <!-- Список блюд -->
        <ListBox Grid.Row="1" 
                 Name="DishesListBox" 
                 Margin="0,0,0,15">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#BDC3C7" 
                            BorderThickness="1" 
                            Background="#F8F9FA"
                            Padding="10"
                            Margin="0,2">
                        <TextBlock Text="{Binding Name}" 
                                  FontSize="14"/>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Кнопки -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" 
                    Content="Выбрать" 
                    Background="#27AE60"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Padding="15,8"
                    Margin="0,0,10,0"
                    Click="SelectButton_Click"/>

            <Button Grid.Column="2" 
                    Content="Отмена" 
                    Background="#95A5A6"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Padding="15,8"
                    Click="CancelButton_Click"/>
        </Grid>
    </Grid>
</Window>