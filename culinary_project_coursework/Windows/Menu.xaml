<Window x:Class="culinary_project_coursework.Windows.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:culinary_project_coursework"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" 
                   Text="Составление меню" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,30"/>

        <!-- На сколько дней -->
        <TextBlock Grid.Row="1" 
                   Text="На сколько дней :" 
                   FontSize="16" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,10"/>

        <ComboBox Grid.Row="1" 
                  Name="DaysComboBox"
                  FontSize="14"
                  Padding="10,5"
                  Margin="0,30,0,0"
                  VerticalContentAlignment="Center"
                  Height="35">
            <ComboBoxItem Content="Выберите количество дней" IsSelected="True"/>
            <ComboBoxItem Content="1 день"/>
            <ComboBoxItem Content="2 дня"/>
            <ComboBoxItem Content="3 дня"/>
            <ComboBoxItem Content="4 дня"/>
            <ComboBoxItem Content="5 дней"/>
            <ComboBoxItem Content="6 дней"/>
            <ComboBoxItem Content="7 дней"/>
        </ComboBox>

        <!-- Разделитель -->
        <Border Grid.Row="2" 
                Height="1" 
                Background="LightGray" 
                Margin="0,30,0,30"/>

        <!-- На сколько человек -->
        <TextBlock Grid.Row="3" 
                   Text="На сколько человек :" 
                   FontSize="16" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,10"/>

        <ComboBox Grid.Row="3" 
                  Name="PeopleComboBox"
                  FontSize="14"
                  Padding="10,5"
                  Margin="0,30,0,0"
                  VerticalContentAlignment="Center"
                  Height="35">
            <ComboBoxItem Content="Выберите количество человек" IsSelected="True"/>
            <ComboBoxItem Content="1 человек"/>
            <ComboBoxItem Content="2 человека"/>
            <ComboBoxItem Content="3 человека"/>
            <ComboBoxItem Content="4 человека"/>
        </ComboBox>

        <!-- Кнопка создания меню -->
        <Button Grid.Row="4" 
                Content="Создать меню" 
                FontSize="16"
                Background="LightGreen"
                Padding="15,8"
                Margin="0,50,0,0"
                HorizontalAlignment="Center"
                Click="CreateMenuButton_Click"
                Height="40" Width="150"/>

        <!-- Кнопка назад -->
        <Button Grid.Row="5" 
                Content="Назад" 
                FontSize="14"
                Background="LightGray"
                Padding="10,5"
                Margin="0,20,0,0"
                HorizontalAlignment="Right"
                Click="BackButton_Click" Width="100"/>
    </Grid>
</Window>
