<Window x:Class="culinary_project_coursework.Windows.My_recipes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:culinary_project_coursework"
        xmlns:controls="clr-namespace:culinary_project_coursework.Controls"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Title="Мои рецепты"
        Background="#FFF8F0">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <!-- Основной контент -->
        <Grid Grid.Column="0" Margin="25,25,25,25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="🍳 Мои рецепты" 
                      FontSize="26" 
                      FontWeight="SemiBold" 
                      Foreground="#8B4513"
                      Margin="0,0,0,25"
                      Grid.Row="0"/>

            <!-- ListBox с прокруткой -->
            <Border Grid.Row="1"
                    Background="White"
                    BorderBrush="#DEB887"
                    BorderThickness="2">
                <ListBox x:Name="BoxRecipes" 
                         ItemsSource="{Binding UserRecipes}" 
                         FontSize="14" 
                         Background="Transparent"
                         Grid.Row="1"
                         SelectionChanged="BoxRecipes_SelectionChanged"
                         MouseDoubleClick="BoxRecipes_MouseDoubleClick"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         BorderThickness="0">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <controls:RecipeControl/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0,5,0,5"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Border>
        </Grid>

        <!-- Боковая панель -->
        <Border Grid.Column="1" 
                Background="White"
                BorderBrush="#DEB887" 
                BorderThickness="2,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Верхняя часть с кнопками -->
                <StackPanel Grid.Row="0" Margin="15">
                    <TextBlock Text="Управление" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="#8B4513"
                               Margin="0,0,0,20"/>

                    <Button Content="📋 Меню" 
                            FontSize="14"
                            Background="#FFA07A"
                            Foreground="White"
                            Padding="12,10"
                            Margin="0,0,0,15"
                            Click="ButtonMenuClick"/>

                    <Button Content="➕ Добавить рецепт" 
                            FontSize="14"
                            Background="#FF7F50"
                            Foreground="White"
                            Padding="12,10"
                            Margin="0,0,0,15"
                            Click="AddMyRecipesClick"/>

                    <Button Content="🗑️ Удалить рецепт" 
                            FontSize="14"
                            Background="#CD5C5C"
                            Foreground="White"
                            Padding="12,10"
                            Margin="0,0,0,15"
                            Click="ButtonDeleteRecipe"/>
                </StackPanel>

                <!-- Пустое пространство -->
                <Border Grid.Row="1"/>

                <!-- Кнопки в самом низу -->
                <StackPanel Grid.Row="2" Margin="15">
                    <Button Content="🔙 Назад" 
                            FontSize="14"
                            Background="#8B7355"
                            Foreground="White"
                            Padding="12,10"
                            Margin="0,0,0,10"
                            Click="ButtonBack"/>

                    <Button Content="🚪 Выйти" 
                            FontSize="14"
                            Background="#A0522D"
                            Foreground="White"
                            Padding="12,10"
                            Click="ButtonExitClick"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>