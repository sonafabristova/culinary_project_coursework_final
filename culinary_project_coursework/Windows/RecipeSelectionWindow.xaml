<Window x:Class="culinary_project_coursework.Windows.RecipeSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:culinary_project_coursework.Controls"
        Title="Выбор рецепта" 
        Height="650" 
        Width="850"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="#FFF8F0">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="🍳 Выбор рецепта" 
                           FontSize="24" 
                           FontWeight="SemiBold"
                           Foreground="#8B4513"/>
                <Border Height="3" 
                        Width="200" 
                        Background="#DEB887" 
                        Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Информация о фильтрации -->
            <TextBlock Name="FilterInfoText" 
                       FontSize="14" 
                       Foreground="#8B4513"
                       Margin="0,10,0,0"
                       HorizontalAlignment="Center"
                       FontStyle="Italic"/>
        </StackPanel>

        <!-- Список рецептов -->
        <Border Grid.Row="1" 
                Background="White"
                BorderBrush="#DEB887"
                BorderThickness="2"
                Padding="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListBox Name="RecipesListBox" 
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <controls:RecipeControl Margin="0,0,0,10"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0,5,0,5"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FFF0E0"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFFDF8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </ScrollViewer>
        </Border>

        <!-- Кнопки действий -->
        <Border Grid.Row="2" 
                Background="White"
                BorderBrush="#DEB887" 
                BorderThickness="0,2,0,0" 
                Padding="15,15,15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Информация о количестве рецептов -->
                <StackPanel Grid.Column="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Text="📊"
                               FontSize="16"
                               Margin="0,0,8,0"/>
                    <TextBlock Name="RecipeCountText"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#8B4513"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Кнопки -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button Content="✅ Выбрать" 
                            Click="SelectButton_Click" 
                            Padding="25,12"
                            Margin="0,0,15,0"
                            Background="#FF7F50"
                            Foreground="White"
                            FontSize="15"
                            FontWeight="SemiBold"
                            MinWidth="120"
                            Cursor="Hand"/>

                    <Button Content="❌ Отмена" 
                            Click="CancelButton_Click" 
                            Padding="25,12"
                            Background="#8B7355"
                            Foreground="White"
                            FontSize="15"
                            FontWeight="SemiBold"
                            MinWidth="120"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>