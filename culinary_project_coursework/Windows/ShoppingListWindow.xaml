<Window x:Class="culinary_project_coursework.Windows.ShoppingListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Title="Список покупок" 
        WindowStartupLocation="CenterOwner"
        Background="#FFF8F0">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Grid.Row="0" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,25">
            <TextBlock Text="🛒 Список покупок" 
                      FontSize="28" 
                      FontWeight="SemiBold" 
                      Foreground="#8B4513"/>
            <Border Height="3" 
                    Width="220" 
                    Background="#DEB887" 
                    Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Основной контент -->
        <Border Grid.Row="1" 
                BorderBrush="#DEB887" 
                BorderThickness="2" 
                Background="White"
                Margin="0,0,0,25">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовки таблицы -->
                <Border Grid.Row="0" 
                        Background="#FF7F50" 
                        Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="220"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                  Text="📝 Название продукта" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Foreground="White"/>

                        <TextBlock Grid.Column="1" 
                                  Text="⚖️ Количество" 
                                  FontSize="18" 
                                  FontWeight="SemiBold"
                                  Foreground="White"
                                  HorizontalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Список продуктов -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl Name="ProductsItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#DEB887" 
                                        BorderThickness="0,1,0,0" 
                                        Background="#FFFDF8"
                                        Padding="0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="220"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Название продукта -->
                                        <Border Grid.Column="0" 
                                                BorderBrush="#DEB887" 
                                                BorderThickness="0,0,1,0">
                                            <TextBox Text="{Binding ProductName, Mode=TwoWay}"
                                                     BorderThickness="0"
                                                     Padding="20,15"
                                                     FontSize="15"
                                                     VerticalContentAlignment="Center"
                                                     Background="Transparent"
                                                     VerticalAlignment="Stretch"/>
                                        </Border>

                                        <!-- Количество -->
                                        <Border Grid.Column="1" 
                                                Background="#FFFDF8">
                                            <TextBox Text="{Binding Quantity, Mode=TwoWay}"
                                                     BorderThickness="0"
                                                     Padding="20,15"
                                                     FontSize="15"
                                                     VerticalContentAlignment="Center"
                                                     HorizontalAlignment="Stretch"
                                                     TextAlignment="Center"
                                                     Background="Transparent"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Кнопки управления -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Кнопка Назад -->
            <Button Grid.Column="0" 
                    Content="🔙 Назад" 
                    Background="#8B7355"
                    Foreground="White"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Padding="20,12"
                    Margin="0,0,15,0"
                    Click="BackButton_Click"
                    Width="120"/>

            <!-- Кнопка добавления продукта -->
            <Button Grid.Column="1" 
                    Content="➕ Добавить продукт" 
                    Background="#FF7F50"
                    Foreground="White"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Padding="20,12"
                    Margin="0,0,15,0"
                    Click="AddProductButton_Click"/>

            <!-- Кнопка удаления -->
            <Button Grid.Column="2" 
                    Content="🗑️ Удалить" 
                    Background="#CD5C5C"
                    Foreground="White"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Padding="20,12"
                    Margin="0,0,15,0"
                    Click="DeleteProductButton_Click"
                    Name="DeleteProductButton"/>

            <!-- Кнопка сохранения -->
            <Button Grid.Column="3" 
                    Content="💾 Сохранить список" 
                    Background="#27AE60"
                    Foreground="White"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Padding="20,12"
                    Margin="0,0,15,0"
                    Click="SaveListButton_Click"/>

            <!-- Кнопка выхода -->
            <Button Grid.Column="5" 
                    Content="🚪 Выйти" 
                    FontSize="15"
                    Background="#A0522D"
                    Foreground="White"
                    FontWeight="SemiBold"
                    Padding="20,12"
                    Click="ButtonExitClick"
                    Width="120"/>
        </Grid>

    </Grid>
</Window>