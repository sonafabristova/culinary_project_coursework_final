<Window x:Class="culinary_project_coursework.Windows.ShoppingListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Title="Список покупок" 
        WindowStartupLocation="CenterOwner"
        Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                BorderBrush="#2C3E50" 
                BorderThickness="2" 
                Background="#34495E"
                Padding="20"
                Margin="0,0,0,20"
                CornerRadius="5">
            <TextBlock Text="Список покупок" 
                      FontSize="28" 
                      FontWeight="Bold" 
                      Foreground="White"
                      TextAlignment="Center"/>
        </Border>

        <!-- Основной контент -->
        <Border Grid.Row="1" 
                BorderBrush="#BDC3C7" 
                BorderThickness="1" 
                Background="#F8F9FA"
                Padding="0"
                CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовки таблицы -->
                <Border Grid.Row="0" 
                        Background="#3498DB" 
                        Padding="15"
                        CornerRadius="5,5,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                  Text="Название продукта" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                  Foreground="White"/>

                        <TextBlock Grid.Column="1" 
                                  Text="Количество" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                  Foreground="White"
                                  HorizontalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Список продуктов -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl Name="ProductsItemsControl" 
                                 Margin="0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#D5DBDB" 
                                        BorderThickness="0,1,0,0" 
                                        Background="White"
                                        Padding="0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="200"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Название продукта -->
                                        <TextBox Grid.Column="0" 
                                                 Text="{Binding ProductName, Mode=TwoWay}"
                                                 BorderThickness="0"
                                                 Padding="15,12"
                                                 FontSize="14"
                                                 VerticalContentAlignment="Center"
                                                 Background="Transparent"
                                                 VerticalAlignment="Stretch"/>

                                        <!-- Количество -->
                                        <Border Grid.Column="1" 
                                                BorderBrush="#D5DBDB" 
                                                BorderThickness="1,0,0,0"
                                                Background="White">
                                            <TextBox Text="{Binding Quantity, Mode=TwoWay}"
                                                     BorderThickness="0"
                                                     Padding="15,12"
                                                     FontSize="14"
                                                     VerticalContentAlignment="Center"
                                                     HorizontalAlignment="Stretch"
                                                     TextAlignment="Center"
                                                     Background="Transparent"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Кнопки управления -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Кнопка Назад слева -->
            <Button Grid.Column="0" 
                    Content="Назад" 
                    Background="#95A5A6"
                    Foreground="White"
                    FontWeight="SemiBold"
                    FontSize="14"
                    Padding="15,10"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Left"
                    Width="100"
                    Click="BackButton_Click"/>

            <!-- Кнопка добавления продукта -->
            <Button Grid.Column="1" 
                    Content="+ Добавить продукт" 
                    Background="#27AE60"
                    Foreground="White"
                    FontWeight="SemiBold"
                    FontSize="14"
                    Padding="15,10"
                    Margin="0,0,10,0"
                    Click="AddProductButton_Click"/>

            <!-- Кнопка удаления -->
            <Button Grid.Column="2" 
                    Content="Удалить" 
                    Background="#E74C3C"
                    Foreground="White"
                    FontWeight="SemiBold"
                    FontSize="14"
                    Padding="15,10"
                    Margin="0,0,10,0"
                    Click="DeleteProductButton_Click"
                    Name="DeleteProductButton"/>

            <!-- Кнопка изменения -->
            <Button Grid.Column="3" 
                    Content="Изменить" 
                    Background="#2980B9"
                    Foreground="White"
                    FontWeight="SemiBold"
                    FontSize="14"
                    Padding="15,10"
                    Margin="0,0,10,0"
                    Click="EditProductButton_Click"
                    Name="EditProductButton"/>

            <!-- Кнопка назвать/сохранить -->
            <Button Grid.Column="4" 
                    Content="Сохранить список" 
                    Background="#F39C12"
                    Foreground="White"
                    FontWeight="SemiBold"
                    FontSize="14"
                    Padding="15,10"
                    Click="SaveListButton_Click"/>
        </Grid>

    </Grid>
</Window>