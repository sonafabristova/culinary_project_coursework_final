<Window x:Class="culinary_project_coursework.Autor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:culinary_project_coursework"
        mc:Ignorable="d"
        Title="Autor" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBox Margin="0,5,5,0" Width="120" Name="BoxLogin"/>
                <TextBlock Text="Логин"/>
            </StackPanel>
            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                <TextBox Margin="0,5,5,0" Width="120" Name="BoxPass"/>
                <TextBlock Text="Пароль"/>
            </StackPanel>
            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                <Button Margin="0,5,0,0" Width="100" Height="20" Content="Войти" Name="ButtonLogin" Click="ButtonLogin_Click"/>
                <Button Margin="0,5,0,0" Content="Зарегистрироваться" Height="20" x:Name="ButtonRegister" Click="ButtonRegister_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
