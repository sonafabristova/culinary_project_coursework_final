<Window x:Class="culinary_project_coursework.My_recipes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:culinary_project_coursework"
        mc:Ignorable="d"
        Title="Мои рецепты" Height="650" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <!-- Основной контент -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="Мои рецепты" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Margin="0,0,0,20"/>

                <!-- Отдельная панель для рецептов -->
                <StackPanel x:Name="MyRecipesContainer"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Боковая панель -->
        <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Верхняя часть с кнопками -->
                <StackPanel Grid.Row="0" Margin="15">
                    <!-- Разделитель -->
                    <Border Height="1" Background="LightGray" Margin="0,0,0,20"/>

                    <Button Content="Меню" 
                            FontSize="14"
                            Background="LightSalmon"
                            Padding="10,5"
                            Margin="5"
                            Click="ButtonMenuClick"/>
                    <Button Content="Добавить рецепт" 
                         FontSize="14"
                         Background="LightSalmon"
                         Padding="10,5"
                         Margin="5"
                         Click="AddMyRecipesClick"/>
                </StackPanel>

                <!-- Пустое пространство -->
                <Border Grid.Row="1"/>

                <!-- Кнопки в самом низу -->
                <StackPanel Grid.Row="2" Margin="15">
                   

                    <Button Content="Выйти" 
                            FontSize="14"
                            Background="LightSalmon"
                            Padding="10,5"
                            Margin="5"
                            Click="ButtonExitClick"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window> 