<Window x:Class="culinary_project_coursework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:culinary_project_coursework"
        mc:Ignorable="d"
        Title="Кулинарная книга" Height="650" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="Популярные рецепты" 
                  FontSize="24" 
                  FontWeight="Bold" 
                  Margin="0,0,0,20"/>

                <!-- Отдельная панель для рецептов -->
                <StackPanel x:Name="RecipesContainer"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Боковая панель -->
        <Border Grid.Column="1" Background="#f5f5f5" BorderBrush="LightGray" BorderThickness="1,0,0,0">
            <StackPanel Margin="15">
                <!-- Разделитель -->
                <Border Height="1" Background="LightGray" Margin="0,0,0,20"/>

                <!-- Мои рецепты -->
                <Button Content="Мои рецепты" 
                        FontSize="14"
                        Background="LightSalmon"
                        Padding="10,5"
                        Margin="5"
                        Click="ButtonMyRecipesClick"/>

                <!-- Меню -->
                <Button Content="Меню" 
                        FontSize="14"
                        Background="LightSalmon"
                        Padding="10,5"
                        Margin="5"
                        Click="ButtonMenuClick"/>

                <!-- Выйти -->
                <Button Content="Выйти" 
                        FontSize="14"
                        Background="LightSalmon"
                        Padding="10,5"
                        Margin="15,450,15,15"
                        VerticalAlignment="Bottom"
                        Click="ButtonExitClick"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>